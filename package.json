{
  "name": "hypnos",
  "version": "1.0.0",
  "description": "Hypnos - Cognitive Execution Layer for Ethereum Smart Contracts",
  "private": true,
  "workspaces": [
    "contracts",
    "indexer",
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:indexer": "cd indexer && envio dev",
    "build": "npm run build:contracts && npm run build:indexer && npm run build:backend && npm run build:frontend",
    "build:contracts": "cd contracts && npm run build",
    "build:indexer": "cd indexer && envio build",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "test": "npm run test:contracts",
    "test:contracts": "cd contracts && npm test",
    "deploy": "cd contracts && npm run deploy:sepolia"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
